<?xml version="1.0" encoding="utf-8"?>
  <android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/res/com.example.droidman.customviewmock"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/colorPrimary"
      tools:context="com.example.droidman.customviewmock.MainActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@color/profile_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:id="@+id/circleImageView"/>
    <TextView
        android:text="@string/person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/circleImageView"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="0dp"/>
    <TextView
        android:text="@string/school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/circleImageView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"/>
    <com.example.droidman.customviewmock.customviews.ProgressCircle
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        android:layout_marginStart="16dp"
        android:id="@+id/accuracy_circle"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <com.example.droidman.customviewmock.customviews.ProgressCircle
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
        android:id="@+id/speed_circle"
        android:layout_marginStart="72dp"
        app:layout_constraintLeft_toLeftOf="@+id/accuracy_circle"
    />
    <TextView
        android:text="Mathematics 25%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/speed_circle"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/speed_circle_stroke"
        android:textStyle="bold"/>
    <TextView
        android:text="Physics 35%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/speed_circle_stroke"
        android:textStyle="bold"/>
    <TextView
        android:text="Chemistry 22%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:textColor="@color/speed_circle_stroke"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/speed_circle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" android:textColor="@color/accuracy_circle_stroke"
        android:text="you need to solve questions more carefully and make sure to double  check the answers"
        app:layout_constraintHorizontal_bias="0.0" android:textAlignment="center" android:paddingStart="16dp"
        android:paddingEnd="16dp"/>
  </android.support.constraint.ConstraintLayout>